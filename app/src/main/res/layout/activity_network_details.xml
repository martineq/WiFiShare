<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingRight="@dimen/activity_right_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_bottom_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ar.uba.fi.tdp.wifi_share.views_controller.networkDetails.NetworkDetailsActivity"
    tools:showIn="@layout/network_description" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:id="@+id/networkName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DirecciÃ³n:"
        android:id="@+id/NetworkAddress"
        android:layout_below="@+id/networkName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking:"
        android:id="@+id/networkRanking"
        android:layout_below="@+id/NetworkAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intensidad:"
        android:id="@+id/signalStrength"
        android:layout_below="@+id/networkRanking"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cifrado:"
        android:id="@+id/networkCypher"
        android:layout_below="@+id/signalStrength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/networkNameID"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/networkName"
        android:layout_alignTop="@+id/networkName"
        android:layout_marginLeft="150px"
        android:layout_alignParentStart="true"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/networkAddressID"
        android:layout_alignTop="@+id/NetworkAddress"
        android:layout_toRightOf="@+id/NetworkAddress"
        android:layout_marginLeft="150px"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/networkRankingID"
        android:layout_toRightOf="@+id/networkRanking"
        android:layout_alignTop="@+id/networkRanking"
        android:layout_marginLeft="150px"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signalStrenghtID"
        android:layout_toRightOf="@+id/signalStrength"
        android:layout_alignTop="@+id/signalStrength"
        android:layout_marginLeft="150px"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/networkCypherID"
        android:layout_alignTop="@+id/networkCypher"
        android:layout_toRightOf="@+id/networkCypher"
        android:layout_marginLeft="150px"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RANKEAR"
            android:id="@+id/rankButton"
            android:layout_alignBottom="@+id/connectButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Conectar"
            android:id="@+id/connectButton"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/networkAddressID"
            android:layout_alignEnd="@+id/networkAddressID"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
